<div class="row-fluid">
  <div class="span8">
    <div class="well ">
      <div class="progress progress-striped <%= @progress_status %>">
        <div class="bar " style="width: <%= @sprint_progress %>%"><%= @sprint_progress.to_i %>%</div>
      </div>
      <%= render 'burndown' %>
    </div>
    
    <div class="row-fluid">
      <div class="span6">
        <div class="well ">
          <%= render 'breakdown' %>
        </div>
      </div>
      <div class="span6">
        <div class="well ">
          <%= render 'progress' %>
        </div>
      </div>
    </div>
    
  </div>
  
  
  
  <div class="span4">
    <h2>Today</h2>
    <%= render 'card_list', :card_date => Time.now.to_date %>
    <h2>Yesterday</h2>
    <%= render 'card_list', :card_date => 1.day.ago.to_date %>
  </div>

</div>


