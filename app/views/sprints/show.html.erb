<div class="row-fluid">
  <div class="span8">

    <div class="progress">
      <div class="bar bar-danger" style="width: <%= @sprint_progress_to_do %>%"><%= @to_do.sum('points') %></div>
      <div class="bar bar-warning" style="width: <%= @sprint_progress_wip %>%"><%= @wip.sum('points') %></div>
      <div class="bar bar-success" style="width: <%= @sprint_progress_done %>%"><%= @done.sum('points') %></div>
    </div>

    <div class="tabbable"> <!-- Only required for left/right tabs -->
      <ul class="nav nav-tabs">
        <li class="active"><a href="#tab1" data-toggle="tab">Team</a></li>
        <li><a href="#tab2" data-toggle="tab">Sprint</a></li>
      </ul>
      <div class="tab-content">
        <div class="tab-pane active" id="tab1">
          <%= render 'kanban_team' %>
        </div>
        <div class="tab-pane" id="tab2">
          <%= render 'kanban_sprint' %>
        </div>
      </div>
    </div>

    <%= render 'burndown' %>

    <div class="row-fluid">
      <div class="span6">
        <div class="well ">
          <%= render 'breakdown' %>
        </div>
      </div>
      <div class="span6">
        <div class="well ">
          <%= render 'progress' %>
        </div>
      </div>
    </div>
  </div>
  
  <div class="span4">    
    <%= render 'card_list' %>
  </div>
</div>