<div class="row-fluid">
  <div class="span8">
    <div class="well ">
      <div class="progress progress-striped <%= @progress_status %>">
        <div class="bar " style="width: <%= @sprint_progress %>%"><%= @sprint_progress.to_i %>%</div>
      </div>
      <%= render 'burndown' %>
    </div>
    
    
    <div class="well">
    <table class="table">
      <thead>
        <tr>
          <th class="span3">To Do       ( <%= @to_do.count %>       Issues <%= @to_do.sum('points') %>        Points )</th>
          <th class="span3">In Progress ( <%= @in_progress.count %> Issues <%= @in_progress.sum('points') %>  Points )</th>
          <th class="span3">In QA       ( <%= @in_qa.count %>       Issues <%= @in_qa.sum('points') %>        Points )</th>
          <th class="span3">Done        ( <%= @done.count %>        Issues <%= @done.sum('points') %>         Points )</th>
        </tr>
      </thead>
      <tbody>
        <tr>
          <td class="span3"><%= render 'bucket', :bucket => @to_do, :state => 'To Do' %></td>
          <td class="span3"><%= render 'bucket', :bucket => @in_progress, :state => 'In Progress' %></td>
          <td class="span3"><%= render 'bucket', :bucket => @in_qa, :state => 'In QA' %></td>
          <td class="span3"><%= render 'bucket', :bucket => @done, :state => 'Done' %></td>
        </tr>
      </tbody>
    </table>
    </div>

    <div class="row-fluid">
      <div class="span6">
        <div class="well ">
          <%= render 'breakdown' %>
        </div>
      </div>
      <div class="span6">
        <div class="well ">
          <%= render 'progress' %>
        </div>
      </div>
    </div>
  </div>
  
  <div class="span4">    
    <%= render 'card_list' %>
  </div>
</div>

  
<meta http-equiv="refresh" content="300">

